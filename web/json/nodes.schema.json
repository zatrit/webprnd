{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "locale.schema.json",
    "title": "Файл списка типов нод WebPRND",
    "description": "Схема для валидации списка типов нод",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "type": {
                "type": "string",
                "enum": [
                    "seed",
                    "random",
                    "output"
                ]
            },
            "name": {
                "type": "string"
            },
            "props": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "default": {}
                    },
                    "required": [
                        "type",
                        "default"
                    ]
                }
            }
        },
        "required": [
            "type",
            "name",
            "props"
        ]
    }
}