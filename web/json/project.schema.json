{
    "$schema": "http://json-schema.org/schema",
    "$id": "https://zatrit.pythonanywhere.com/static/json/project.schema.json",
    "title": "Проект для WebPRND",
    "description": "Содержит данные для вычисления случайных чисел, может быть использован на сайте или же как запрос для API (нужен токен)",
    "type": "object",
    "properties": {
        "token": {
            "description": "Токен для авторизации в API, при использовании на сайте не имеет смысла",
            "type": "string"
        },
        "nodes": {
            "description": "Список элементов, используемых для генерации случайных чисел",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "random",
                            "seed",
                            "output"
                        ]
                    },
                    "name": {
                        "type": "string"
                    },
                    "props": {
                        "type": "object"
                    },
                    "uses": {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "uniqueItems": true
                    }
                },
                "if": {
                    "properties": {
                        "type": {
                            "enum": [
                                "random",
                                "output"
                            ]
                        }
                    }
                },
                "then": {
                    "required": [
                        "uses"
                    ]
                },
                "else": {
                    "not": {
                        "required": [
                            "uses"
                        ]
                    }
                },
                "additionalProperties": false,
                "required": [
                    "id",
                    "type",
                    "name"
                ]
            }
        }
    },
    "required": [
        "nodes"
    ]
}